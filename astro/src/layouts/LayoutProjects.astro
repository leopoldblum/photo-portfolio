---
import "/src/styles/global.css";
import { ClientRouter } from "astro:transitions";
import TopBar from "../components/TopBar.astro";
import { CustomCursor } from "../components/CustomCursor";
import SEOHead from "../components/SEOHead.astro";

interface Props {
    title: string;
    description?: string;
    ogImage?: string;
    siteName?: string;
    instagramUrl?: string;
}

const { title, description, ogImage, siteName, instagramUrl } = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300..700&display=swap" rel="stylesheet" />
        <title>{title}</title>
        <SEOHead title={title} description={description} ogImage={ogImage} siteName={siteName} />
        <ClientRouter />
    </head>

    <body
        class="flex flex-col min-h-screen bg-neutral-900 text-neutral-400 cursor-none"
    >
        <CustomCursor client:load transition:persist />

        <TopBar instagramUrl={instagramUrl} />
        <div
            class="flex-1 w-full lg:w-[65vw] mx-auto flex justify-center items-center"
            style="view-transition-name: page-content"
        >
            <slot />
        </div>
        <script>
            document.addEventListener('astro:before-swap', (e: any) => {
                const dir = document.documentElement.dataset.slide;
                if (!dir) return;

                const style = document.createElement('style');
                if (dir === 'next') {
                    style.textContent = `
                        ::view-transition-old(page-content) { animation: vt-hslide-left-out 0.45s cubic-bezier(0.32,0.72,0,1) both; mix-blend-mode: plus-lighter; }
                        ::view-transition-new(page-content) { animation: vt-hslide-left-in 0.45s cubic-bezier(0.32,0.72,0,1) both; mix-blend-mode: plus-lighter; }
                    `;
                } else {
                    style.textContent = `
                        ::view-transition-old(page-content) { animation: vt-hslide-right-out 0.45s cubic-bezier(0.32,0.72,0,1) both; mix-blend-mode: plus-lighter; }
                        ::view-transition-new(page-content) { animation: vt-hslide-right-in 0.45s cubic-bezier(0.32,0.72,0,1) both; mix-blend-mode: plus-lighter; }
                    `;
                }
                e.newDocument.head.appendChild(style);
            });
        </script>
    </body>
</html>
